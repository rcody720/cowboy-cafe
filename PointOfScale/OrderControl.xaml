<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="ItemSelectionButton"  FontSize="18" Margin="30" Padding="75 20"  Grid.Row="0" HorizontalAlignment="Left">Item Selection</Button>
            <Button Name="CancelOrderButton" FontSize="18" Margin="30" Padding="75 20" Grid.Row="0" HorizontalAlignment="Center">Cancel Order</Button>
        <Button Name="CompleteOrderButton" FontSize="18" Margin="30" Padding="75 20" HorizontalAlignment="Right">Complete Order</Button>
    </Grid>
</UserControl>
